{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@nx-todos/shared/data-model": ["libs/shared/data-model/src/index.ts"],
      "@nx-todos/api/router": ["libs/api/router/src/index.ts"],
      "@nx-todos/api/data": ["libs/api/data/src/index.ts"],
      "@nx-todos/todos/api": ["libs/todos/api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
